<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ProjectE</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f4f6f9;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.4rem;
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 500;
        }

        footer {
            background-color: #212529;
            color: #ccc;
            padding: 20px 0;
            text-align: center;
            position: sticky;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">ProjectE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    @if (Context.Session.GetString("token") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Dashboard"><i class="fa-solid fa-house-user"></i> Panel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout"><i class="fa-solid fa-right-from-bracket"></i> Çıkış</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login"><i class="fa-solid fa-user"></i> Kullanıcı Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Company/Login"><i class="fa-solid fa-building"></i> Firma Giriş</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sayfa İçeriği -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="mt-auto">
        <div class="container">
            <p class="mb-0">© @DateTime.Now.Year ProjectE. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
