@using ProjectE.DTO.OfferDtos
@model List<ResultOfferDto>
@{
    ViewData["Title"] = "Gelen Teklifler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">📩 Gelen Teklifler</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Şu anda size ait herhangi bir teklif bulunmamaktadır.
        </div>
    }
    else
    {
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Bütçe</th>
                    <th>Oluşturulma</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var offer in Model)
                {
                    <tr>
                        <td>@offer.Title</td>
                        <td>@offer.Description</td>
                        <td>@offer.Budget ₺</td>
                        <td>@offer.CreatedAt.ToShortDateString()</td>
                        <td>
                            @(offer.IsApprovedByAdmin ? "✅ Onaylı" : "⏳ Beklemede")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
