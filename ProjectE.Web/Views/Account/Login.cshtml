@using ProjectE.DTO.UserDtos
@model LoginUserDto
@{
    ViewData["Title"] = "Kullanıcı Girişi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-sm border-0" style="width: 100%; max-width: 420px; border-radius: 20px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <i class="fa-solid fa-user-circle fa-3x text-primary mb-2"></i>
                <h3 class="fw-bold text-dark">Kullanıcı Girişi</h3>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i>
                    @TempData["Error"]
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">E-posta</label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="E-posta adresiniz" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Şifreniz" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                    <i class="fa-solid fa-arrow-right-to-bracket me-2"></i> Giriş Yap
                </button>
            </form>

            <div class="mt-4 text-center small">
                Firma olarak giriş yapmak için <a href="/Company/Login" class="text-decoration-none">buraya tıklayın</a>
            </div>
        </div>
    </div>
</div>
